@model IEnumerable<JorgeRamos_ExamenProgreso_1.Models.Reserva>

@{
	ViewData["Title"] = "Index";
}

<h1>Reservas</h1>

<p>
	<a asp-action="Create" class="btn btn-success">Create New</a>

</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.FechaEntrada)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FechaSalida)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ValorPagar)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Cliente)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.FechaEntrada)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FechaSalida)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ValorPagar)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Cliente.Nombre)
				</td>
				<td>
					<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ReservaId">Edit</a>
					<a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.ReservaId">Details</a>
					<a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ReservaId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<footer>
	<p>Nombre: Jorge Ramos<br>Carrera: Ingeniería en Software<br></p>
</footer>