@model IEnumerable<JorgeRamos_ExamenProgreso_1.Models.Recompensas>

@{
	ViewData["Title"] = "Index";
}

<h1>Recompensas</h1>

<p>
	<a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nombre)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FechaInicio)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PuntosAcumulados)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nombre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FechaInicio)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PuntosAcumulados)
				</td>
				<td>
					<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.RecompensaId">Edit</a>
					<a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.RecompensaId">Details</a>
					<a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.RecompensaId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<footer>
	<p>Nombre: Jorge Ramos<br>Carrera: Ingeniería en Software<br></p>
</footer>